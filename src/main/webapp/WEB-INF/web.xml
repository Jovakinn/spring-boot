<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" >

<web-app version="2.5">
    <display-name>My web application</display-name>

    <welcome-file-list>
        <welcome-file>
            authorization.jsp
        </welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>com.mainacad.controller.UserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>items</servlet-name>
        <servlet-class>com.mainacad.controller.OrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>items</servlet-name>
        <url-pattern>/items</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>com.mainacad.controller.CartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>com.mainacad.controller.MainController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>auth</servlet-name>
        <servlet-class>com.mainacad.controller.AuthController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
</web-app>
